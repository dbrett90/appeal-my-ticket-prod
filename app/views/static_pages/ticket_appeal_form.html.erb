<% provide(:title, "Appeal A Ticket") %>
<div class="contact-us">
    <section class = "jumbotron-gradient pt-5">
        <div class="container" id= "contact-form-scroll">
        <% states = us_states %>
            <h1 class = "form-color title-mobile">Fill out the form below and our team will get to work</h1>
            <div class="row">
                <div class="col-12 col-lg-8 pb-3">
                    <div class="form-block">
                        <%= form_for(:ticket_appeal, url: ticket_appeal_form_path) do |f| %>
                            <%= f.label :name, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis'> *Full Name </span><br>
                            <% end %><br>
                            <%= f.text_field :name, class: 'form-control form-control-mobile description-mobile', placeholder: "Full Name", required: true %><br>
                            <%= f.label :email, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *Email </span><br>
                            <% end %><br>
                            <%= f.email_field :email, class: 'form-control form-control-mobile description-mobile', placeholder: "Email", required: true %><br>
                            <%= f.label :address, class: 'form-color field-label emphasis contact-form-item-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *Home Address </span><br>
                            <% end %><br>
                            <%= f.text_field :address, class: 'form-control form-control-mobile description-mobile', placeholder: "Enter your home address", id: :autocomplete_address, required: true %><br>
                            <%= f.label :city_state_of_ticket, class: 'form-color field-label emphasis contact-form-item-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *City & State of Ticket </span><br>
                            <% end %><br>
                            <%= f.text_field :city_state_of_ticket, class: 'form-control form-control-mobile description-mobile', placeholder: "Input the city and state of here the ticket was received", id: :autocomplete_city, required: true %><br>
                            <%= f.label :plate_number, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *License Plate Number </span><br>
                            <% end %><br>
                            <%= f.text_field :plate_number, class: 'form-control form-control-mobile description-mobile', placeholder: "License Plate Number", required: true %><br>
                            <%= f.label :plate_state, class: 'form-color field-label emphasis contact-form-item-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *License Plate State </span><br>
                            <% end %><br>
                            <%= select_tag :plate_state, options_for_select(states), class: "form-control description-mobile", required: true %><br>
                            <%= f.label :ticket_number, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> *Ticket Number </span><br>
                            <% end %><br>
                            <%= f.text_field :ticket_number, class: 'form-control form-control-mobile description-mobile', placeholder: "Ticket Number", required: true %><br>
                            <%= f.label :additional_complaint_information, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis description-mobile'> Additional Information </span><br>
                            <% end %><br>
                            <%= f.text_area :additional_complaint_information, class: 'form-control form-control-mobile description-mobile', placeholder: "Input additional information that could hellp with the appeal" %><br>
                            <%= f.label :thumbail, class: 'form-color field-label emphasis contact-form-item-mobile description-mobile' do %>
                                <span class = 'field-label emphasis  description-mobile'> File Upload - Please Include Photo of Ticket</span><br>
                            <% end %><br>
                            <%= f.file_field :thumbnail, class: "form-control description-mobile", multiple: true %> <br>
                            
                            <%= f.submit "Submit", class: "btn btn-light rounded-button description-mobile" %><br>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>